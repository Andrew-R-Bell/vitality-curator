# Environment Variables

# Reddit API Credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=LongevityBot/0.1 by your_username

# NewsAPI Credentials
NEWSAPI_KEY=your_news_api_key

# Twitter/X API Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Instagram Credentials (via Meta Graph API)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id

# Facebook Page Credentials (via Graph API)
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id

# Bluesky API Credentials (hypothetical example)
BLUESKY_ACCESS_TOKEN=your_bluesky_access_token

# Unsplash API for fallback images
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Daily posting schedule
POST_TIME=09:00
TIMEZONE=Australia/Brisbane
POST_MODE=auto  # auto/news/reddit

# Domain/Keyword blocklist
BLOCKLIST_DOMAINS=example.com,spammyhealth.com
BLOCKLIST_KEYWORDS=miracle cure,instant longevity,secret formula

# Dry-run mode
DRY_RUN=true  # set to true to skip actual posting and only simulate content processing